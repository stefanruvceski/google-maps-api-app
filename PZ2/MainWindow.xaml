                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="CadetBlue"/>
                        <Setter Property="Content" Value="Clear"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
